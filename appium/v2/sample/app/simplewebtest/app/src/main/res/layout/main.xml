<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <EditText
            android:id="@+id/editText001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:inputType="textUri"
            android:text="@string/default_open_url"/>

    <Button
            android:id="@+id/button001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/editText001"
            android:layout_alignLeft="@+id/editText001"
            android:onClick="onClickJump"
            android:text="@string/search_button_label"/>

    <Button
            android:id="@+id/button002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button001"
            android:layout_alignParentLeft="true"
            android:onClick="onClickSetting"
            android:text="@string/setting_button_label"/>

    <Button
            android:id="@+id/button003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button002"
            android:layout_alignParentLeft="true"
            android:onClick="onClickList"
            android:text="@string/list_button_label"/>
</RelativeLayout>